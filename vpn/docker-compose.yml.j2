
services:
  sing-box:
    image: itdoginfo/sing-box:v1.11.4
    restart: unless-stopped
    network_mode: host
    volumes:
      - ./sing-box.json:/etc/sing-box/config.json
      - ./cert:/etc/xray/certs
  proxy:
    image: caddy
    restart: unless-stopped
    network_mode: host
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile
      - ./caddy:/data/
      - ./logs:/logs/
  cfgapp:
    build:
      context: ./cfgapp
      dockerfile: Dockerfile
    restart: unless-stopped
    ports:
      - "127.0.0.1:8003:8000"
    environment:
      - CONFIG_HOST={{ config_host }}
      - PROXY_CONFIG=/config.json
      - OBFS_PASSWORD={{ obfs_password }}
      - HYSTERIA2_PORT={{ hysteria2_port }}
      - SALT={{ salt }}
      - IPV4_BLOCK_PREFIX=18
      - IPV6_BLOCK_PREFIX=32
      - HOST=0.0.0.0
      - PORT=8000
      - LOG_LEVEL=INFO
    volumes:
      - ./cfgapp:/app
      - ./config.json:/config.json
    depends_on:
      - proxy


