
services:
  sing-box:
    image: itdoginfo/sing-box:v1.11.4
    restart: unless-stopped
    network_mode: host
    volumes:
      - ./sing-box.json:/etc/sing-box/config.json
      - ./cert:/etc/xray/certs
  hysteria:
    image: tobyxdd/hysteria
    restart: unless-stopped
    network_mode: host
    volumes:
      - ./cert:/cert
      - ./hysteria.yaml:/etc/hysteria.yaml
    command: ["server", "-c", "/etc/hysteria.yaml"]
  proxy:
    image: caddy
    restart: unless-stopped
    network_mode: host
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile
      - ./caddy:/data/
      - ./logs:/logs/
  cfgapp:
    build:
      context: ./cfgapp
      dockerfile: Dockerfile
    restart: unless-stopped
    ports:
      - "127.0.0.1:8003:8000"
    environment:
      - CONFIG_HOST={{ config_host }}
      - PROXY_CONFIG=/config.json
      - OBFS_PASSWORD={{ obfs_password }}
      - HYSTERIA2_PORT={{ hysteria2_port }}
      - SALT={{ salt }}
      - IPV4_BLOCK_PREFIX=18
      - IPV6_BLOCK_PREFIX=32
      - HOST=0.0.0.0
      - PORT=8000
      - LOG_LEVEL=INFO
    volumes:
      - ./cfgapp:/app
      - ./config.json:/config.json
    depends_on:
      - proxy

  node-exporter:
    image: prom/node-exporter:latest
    container_name: node-exporter
    restart: unless-stopped
    command:
      - '--path.procfs=/host/proc'
      - '--path.rootfs=/rootfs'
      - '--path.sysfs=/host/sys'
      - '--collector.filesystem.mount-points-exclude=^/(sys|proc|dev|host|etc)($$|/)'
      - '--collector.processes'
      - '--collector.systemd'
      - '--collector.tcpstat'
      - '--web.listen-address=127.0.0.1:9100'
    volumes:
      - /proc:/host/proc:ro
      - /sys:/host/sys:ro
      - /:/rootfs:ro
      - /var/run/dbus/system_bus_socket:/var/run/dbus/system_bus_socket:ro
    network_mode: host
    privileged: true
    pid: host
    user: root


